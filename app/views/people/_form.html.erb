  <%= form_for (person), html: {class: "form-horizontal"} do |f| %>
    <% person.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name , class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_area :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :job, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_area :job, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :gender, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.select :gender, Person::GENDER, { include_blank: 'Select a gender' }, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :picture_url, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_area :picture, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Birthdate, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.date_field :birthdate, class: 'form-control input-lg normal-font-size', value: person.birthdate %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :bio, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_area :bio, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4">
        <%= f.submit nil, class: "btn btn-success" %>
        <%= link_to 'Cancel', person, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>